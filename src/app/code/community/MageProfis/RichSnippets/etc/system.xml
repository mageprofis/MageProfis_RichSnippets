<?xml version="1.0"?>
<config>
    <tabs>
        <mageprofis>
            <label>MageProfis</label>
            <sort_order>300</sort_order>
        </mageprofis>
    </tabs>
    <sections>
        <richsnippets translate="label">
            <label>Rich Snippets</label>
            <tab>mageprofis</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <!--
                        <active translate="label">
                            <label>Activated</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        -->
                        <description translate="label">
                            <label>Description</label>
                            <comment></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </description>
                        <pricerange translate="label">
                            <label>Price Range</label>
                            <comment><![CDATA[E.g. "$$": $ = inexpensive | $$ = average/moderate | $$$ = expensive]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pricerange>
                        <openinghours translate="label">
                            <label>Opening Hours</label>
                            <comment><![CDATA[Line sperateted E.g. "Mo-Sa 09:00-12:00", "Mo,Tu,Th,Fri 14:00-18:00"]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </openinghours>
                    </fields>
                </general>
                <rating translate="label">
                    <label>Rating</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Activated</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <mode translate="label">
                            <label>Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>richsnippets/adminhtml_system_config_source_mode</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mode>
                        <trustedshops_id translate="label">
                            <label>Trusted Shops ID</label>
                            <comment>e.g. X0F1DDD95F103DD17AE560B1000000000</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><mode>trustedshops</mode></depends>
                        </trustedshops_id>
                    </fields>
                </rating>
            </groups>
        </richsnippets>
    </sections>
</config>
